{
  "$schema": "http: //json-schema.org/draft-07/schema#",
  "description": "Sensitive data patterns configuration for secret detection",
  "patterns": [
    {
      "name": "AWS Access Key ID",
      "pattern": "AKIA[0-9A-Z]{16}",
      "description": "Amazon Web Services Access Key ID"
    },
    {
      "name": "AWS Secret Access Key",
      "pattern": "[A-Za-z0-9/+=]{40}",
      "context": ["aws_secret", "secret_access_key", "AWS_SECRET"],
      "description": "Amazon Web Services Secret Access Key"
    },
    {
      "name": "GitHub Token",
      "pattern": "(ghp|gho|ghu|ghs|ghr)_[A-Za-z0-9_]{36,}",
      "description": "GitHub Personal Access Token"
    },
    {
      "name": "GitLab Token",
      "pattern": "glpat-[A-Za-z0-9_-]{20,}",
      "description": "GitLab Personal Access Token"
    },
    {
      "name": "Generic API Key",
      "pattern": "[Aa][Pp][Ii][-_]?[Kk][Ee][Yy][\"']?\\s*[:=]\\s*[\"'][A-Za-z0-9_-]{16,}[\"']",
      "description": "Generic API Key pattern"
    },
    {
      "name": "Generic Secret",
      "pattern": "[Ss][Ee][Cc][Rr][Ee][Tt][\"']?\\s*[:=]\\s*[\"'][A-Za-z0-9_-]{8,}[\"']",
      "description": "Generic Secret pattern"
    },
    {
      "name": "Generic Password",
      "pattern": "[Pp][Aa][Ss][Ss][Ww][Oo][Rr][Dd][\"']?\\s*[:=]\\s*[\"'][^\"']{4,}[\"']",
      "description": "Generic Password pattern"
    },
    {
      "name": "Private Key",
      "pattern": "-----BEGIN (RSA |DSA |EC |OPENSSH |PGP )?PRIVATE KEY( BLOCK)?-----",
      "description": "Private Key header"
    },
    {
      "name": "Slack Token",
      "pattern": "xox[baprs]-[0-9]{10,13}-[0-9]{10,13}[a-zA-Z0-9-]*",
      "description": "Slack Bot/App Token"
    },
    {
      "name": "Slack Webhook",
      "pattern": "https: //hooks\\.slack\\.com/services/T[A-Z0-9]+/B[A-Z0-9]+/[A-Za-z0-9]+",
      "description": "Slack Webhook URL"
    },
    {
      "name": "Google API Key",
      "pattern": "AIza[0-9A-Za-z_-]{35}",
      "description": "Google API Key"
    },
    {
      "name": "Google OAuth",
      "pattern": "[0-9]+-[0-9A-Za-z_]{32}\\.apps\\.googleusercontent\\.com",
      "description": "Google OAuth Client ID"
    },
    {
      "name": "Firebase Key",
      "pattern": "AAAA[A-Za-z0-9_-]{7}:[A-Za-z0-9_-]{140}",
      "description": "Firebase Cloud Messaging Key"
    },
    {
      "name": "Stripe API Key",
      "pattern": "(sk|pk)_(test|live)_[0-9a-zA-Z]{24,}",
      "description": "Stripe API Key"
    },
    {
      "name": "Twilio API Key",
      "pattern": "SK[0-9a-fA-F]{32}",
      "description": "Twilio API Key"
    },
    {
      "name": "SendGrid API Key",
      "pattern": "SG\\.[A-Za-z0-9_-]{22}\\.[A-Za-z0-9_-]{43}",
      "description": "SendGrid API Key"
    },
    {
      "name": "Mailgun API Key",
      "pattern": "key-[0-9a-zA-Z]{32}",
      "description": "Mailgun API Key"
    },
    {
      "name": "NPM Token",
      "pattern": "npm_[A-Za-z0-9]{36}",
      "description": "NPM Access Token"
    },
    {
      "name": "PyPI Token",
      "pattern": "pypi-[A-Za-z0-9_-]{50,}",
      "description": "PyPI API Token"
    },
    {
      "name": "Heroku API Key",
      "pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}",
      "context": ["heroku", "HEROKU"],
      "description": "Heroku API Key (UUID format)"
    },
    {
      "name": "Discord Token",
      "pattern": "[MN][A-Za-z0-9]{23,}\\.[A-Za-z0-9-_]{6}\\.[A-Za-z0-9-_]{27}",
      "description": "Discord Bot Token"
    },
    {
      "name": "Discord Webhook",
      "pattern": "https: //discord(?:app)?\\.com/api/webhooks/[0-9]+/[A-Za-z0-9_-]+",
      "description": "Discord Webhook URL"
    },
    {
      "name": "Telegram Bot Token",
      "pattern": "[0-9]{8,10}:[A-Za-z0-9_-]{35}",
      "description": "Telegram Bot API Token"
    },
    {
      "name": "OpenAI API Key",
      "pattern": "sk-[A-Za-z0-9]{32,}",
      "description": "OpenAI API Key"
    },
    {
      "name": "Anthropic API Key",
      "pattern": "sk-ant-[A-Za-z0-9_-]{32,}",
      "description": "Anthropic API Key"
    },
    {
      "name": "WakaTime API Key",
      "pattern": "waka_[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}",
      "description": "WakaTime API Key"
    },
    {
      "name": "JWT Token",
      "pattern": "eyJ[A-Za-z0-9_-]*\\.eyJ[A-Za-z0-9_-]*\\.[A-Za-z0-9_-]*",
      "description": "JSON Web Token"
    },
    {
      "name": "Basic Auth",
      "pattern": "[Bb]asic\\s+[A-Za-z0-9+/=]{20,}",
      "description": "HTTP Basic Authentication"
    },
    {
      "name": "Bearer Token",
      "pattern": "[Bb]earer\\s+[A-Za-z0-9_-]{20,}",
      "description": "HTTP Bearer Token"
    },
    {
      "name": "Database URL",
      "pattern": "(mysql|postgresql|postgres|mongodb|redis|amqp): //[^\\s\"']+:[^\\s\"']+@[^\\s\"']+",
      "description": "Database Connection URL with credentials"
    },
    {
      "name": "SSH Private Key Path",
      "pattern": "id_(rsa|dsa|ecdsa|ed25519)(?!.pub)",
      "context": ["identity", "ssh", "key"],
      "description": "SSH Private Key File Reference"
    },
    {
      "name": "Azure Storage Key",
      "pattern": "[A-Za-z0-9+/]{86}==",
      "context": ["azure", "storage", "account"],
      "description": "Azure Storage Account Key"
    },
    {
      "name": "DigitalOcean Token",
      "pattern": "dop_v1_[a-f0-9]{64}",
      "description": "DigitalOcean Personal Access Token"
    },
    {
      "name": "Cloudflare API Key",
      "pattern": "[a-f0-9]{37}",
      "context": ["cloudflare", "CF_API"],
      "description": "Cloudflare API Key"
    },
    {
      "name": "Vercel Token",
      "pattern": "[A-Za-z0-9]{24}",
      "context": ["vercel", "VERCEL_TOKEN"],
      "description": "Vercel Token"
    }
  ],
  "ignorePatterns": [
    "**/node_modules/**",
    "**/.git/**",
    "**/dist/**",
    "**/build/**",
    "**/*.min.js",
    "**/*.min.css",
    "**/package-lock.json",
    "**/bun.lock"
  ],
  "fileExtensions": [
    ".json",
    ".yaml",
    ".yml",
    ".toml",
    ".ini",
    ".conf",
    ".config",
    ".env",
    ".env.*",
    ".properties",
    ".xml",
    ".plist"
  ]
}
